[flake8]
# line length is intentionally set to 80 here as we use flake8-bugbear (which will bump it to 88)
# See https://github.com/psf/black/blob/master/docs/the_black_code_style.md#line-length for more details
max-line-length = 80
max-complexity = 12
select = B,C,E,F,W,B950
ignore = E203,E501,W503
exclude = .git,node_modules,*/migrations/*
